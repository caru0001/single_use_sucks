---
import { Image } from "astro:assets";
import mikroplast1 from "../assets/images/mikroplast1.webp";
import mikroplast2 from "../assets/images/mikroplast2.webp";
import mikroplast3 from "../assets/images/mikroplast3.webp";
import plastikposesort from "../assets/images/plsatikposesort.webp";
import plastiskkopfarvet from "../assets/images/plastikkopfarvet.webp";
import plastikkopgennemsigtig from "../assets/images/plastikkopgennemsigtig.webp";
---

<section id="plasticvsplastic" class="mt-40 relative">
  <div class="mx-16 relative z-10 grid grid-cols-2 gap-8 text-center h-screen items-center">
    <!-- Venstre kolonne -->
    <div>
      <div class="mb-40">
        <h2 class="font-bebas text-custom-offwhite text-5xl leading-none">
          SYNLIG PLASTIK<br />FORURENING
        </h2>
      </div>

      <div>
        <p class="mt-4 max-w-xs text-custom-ocean bg-custom-lightblue opacity-75 px-8 py-8 m-auto">Du kan samle en plastik pose op, men...</p>
      </div>
    </div>

    <!-- Højre kolonne -->
    <div>
      <div class="mb-40">
        <h2 class="font-bebas text-custom-offwhite text-5xl leading-none">
          USYNLIG PLASTIK<br />FORURENING
        </h2>
      </div>

      <div>
        <p class="mt-4 max-w-xs text-custom-ocean bg-custom-lightblue opacity-75 px-8 py-8 m-auto">Men du er nødt til at filtrere mikroplast fra...</p>
      </div>
    </div>
  </div>

  <!-- Billeder i venstre kolonne -->
  <div class="absolute w-[25%] h-auto opacity-100 z-0" style="left: 15%; top: 20%; transform: rotate(-40deg);">
    <Image src={plastikposesort} alt="sort plastikpose" />
  </div>
  <div class="absolute w-[14%] h-auto opacity-80 z-0" style="left: 15%; top: 50%; transform: rotate(-45deg);">
    <Image src={plastiskkopfarvet} alt="farvet plastikkop" />
  </div>
  <div class="absolute w-[13%] h-auto opacity-80 z-0" style="left: 28%; top: 48%; transform: rotate(-110deg);">
    <Image src={plastikkopgennemsigtig} alt="gennemsigtig plastikkop" />
  </div>

  <!-- Billeder i højre kolonne -->
  <div class="absolute w-[70%] h-auto opacity-80 z-0" style="right: -30%; top: 30%; transform: rotate(10deg);">
    <Image src={mikroplast1} alt="mikroplast 1" />
  </div>
  <div class="absolute w-[70%] h-auto opacity-80 z-0" style="right: -35%; top: 25%; transform: rotate(-15deg);">
    <Image src={mikroplast2} alt="mikroplast 2" />
  </div>
  <div class="absolute w-[70%] h-auto opacity-80 z-0" style="right: -30%; top: 40%; transform: rotate(5deg);">
    <Image src={mikroplast3} alt="mikroplast 3" />
  </div>
</section>
